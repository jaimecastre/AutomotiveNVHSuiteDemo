<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btStart" Content="Start" FontSize="30" Width="200" Height="200" Grid.Row="0" Click="btStart_Click"></Button>
        <Label x:Name="lbSPL" FontSize="30" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Error: x dB"></Label>
        <s:SciChartSurface x:Name="sciChartSurface" Grid.Row="1"/>
    </Grid>
</Window>

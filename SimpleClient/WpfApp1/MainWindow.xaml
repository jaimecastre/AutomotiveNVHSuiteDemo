<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:s="http://schemas.abtsoftware.co.uk/scichart"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style TargetType="DockPanel">
            <Setter Property="Background" Value="#F0F0F0"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <x:Array x:Key="SignalColors" Type="{x:Type Color}">
            <Color>#FF0000</Color>
            <!-- Red -->
            <Color>#00FF00</Color>
            <!-- Green -->
            <Color>#0000FF</Color>
            <!-- Blue -->
            <Color>#FFFF00</Color>
            <!-- Yellow -->
            <Color>#FF00FF</Color>
            <!-- Magenta -->
            <Color>#00FFFF</Color>
            <!-- Cyan -->
            <!-- Add more colors as needed -->
        </x:Array>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Background="#E0E0E0" Margin="10">
            <Button x:Name="btStart" Content="Start" Click="btStart_Click"/>
            <Label x:Name="lbSPL" Content="Error: x dB"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Center" Background="#E0E0E0" Margin="10">
            <Label Content="Data file: "/>
            <TextBox x:Name="lbFilePath"/>
            <Button x:Name="btLoadFile" Content="Load file" Click="LoadCsv_Click"/>
        </StackPanel>
        <Grid DockPanel.Dock="Bottom" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <s:SciChartSurface x:Name="sciChartSurface" Grid.Row="0">
                <s:SciChartSurface.ChartModifier>
                    <s:LegendModifier ShowLegend="True" />
                </s:SciChartSurface.ChartModifier>
            </s:SciChartSurface>
            <s:SciChartSurface x:Name="heatmapSurface" Grid.Row="1">
                <s:SciChartSurface.RenderableSeries>
                    <s:FastUniformHeatmapRenderableSeries x:Name="heatmapSeries"/>
                </s:SciChartSurface.RenderableSeries>
            </s:SciChartSurface>
        </Grid>
    </DockPanel>
</Window>
